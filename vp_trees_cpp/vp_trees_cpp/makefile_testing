CC = clang++ -std=c++14
PYLIBPATH = /Users/gil/anaconda/envs/python_3_env/lib
LIB = -L$(PYLIBPATH) -lpython3.5m -ldl -framework CoreFoundation -lboost_python
OPTS = $(shell /Users/gil/anaconda/envs/python_3_env/bin/python-config --include) -O2

default: vp_tree.so
	# @python ./python_tests.py
	@python ./python_tests_2.py
	# @python ./python_tests_3.py

vp_tree.so: vp_tree.o
	$(CC) $(LIB) -Wl,-rpath,$(PYLIBPATH) -shared $< -o $@

vp_tree.o: vp_tree.cpp Makefile
	# vp_tree.o: vp_tree.cpp conversions.cpp Makefile
	$(CC) $(OPTS) -c $< -o $@

clean:
	rm -rf *.so *.o

.PHONY: default clean
